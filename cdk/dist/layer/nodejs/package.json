{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "yarn build:compile && yarn build:bundle",
    "build:compile": "tsc",
    "build:bundle": "shx mkdir -p dist/layer/nodejs && shx cp package.json dist/layer/nodejs && shx cp yarn.lock dist/layer/nodejs && yarn --cwd dist/layer/nodejs --production install",
    "deploy": "cdk deploy",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.93.0",
    "@aws-cdk/aws-apigateway": "^1.93.0",
    "@aws-cdk/aws-lambda": "^1.93.0",
    "@aws-cdk/core": "^1.93.0",
    "@types/aws-lambda": "^8.10.72",
    "@types/bunyan": "^1.8.6",
    "@types/jest": "^26.0.10",
    "@types/node": "14.14.35",
    "aws-cdk": "^1.93.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~4.2.3"
  },
  "dependencies": {
    "@line/bot-sdk": "^7.2.0",
    "bunyan": "^1.8.15",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.16"
  }
}
